extends layout

block content
    form.form-signin(action='/login' method='POST')
        h2.form-signin-heading Please sign in
        if error
            .alert.alert-danger #{error.message}
        block authForm
            label(for=loginEmail) Email address
            input#loginEmail.form-control(name='email' type='email' placeholder='example@gmail.com' required autofocus)
            label(for=loginPassword) Password
            input#loginPassword.form-control(name='password' type='password' placeholder='Your secret pass' required)
            button#loginSubmit.btn.btn-lg.btn-primary.btn-block(type=submit) Sign In