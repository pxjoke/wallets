extends layout

block content
    form.form-signin(action='/register' method='POST')
        h2.form-signin-heading Registration

        if error
            .alert.alert-danger #{error.message}

        label(for=inputName) Your Name
        input#inputName.form-control(name='name' type='text' placeholder='John Doe' value=user.name required autofocus)

        label(for=inputEmail) Email address
        input#inputEmail.form-control(name='email' type='email' placeholder='example@gmail.com' value=user.email required)

        label(for=inputPassword) Password
        input#inputPassword.form-control(name='password' type='password' placeholder='Your secret pass' required)

        button.btn.btn-lg.btn-primary.btn-block(type=submit) Sign Up

        a(href='/login') Already have an account? Just sign in!